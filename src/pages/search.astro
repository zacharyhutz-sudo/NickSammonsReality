---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Property Search | Nick Sammons Realty">
	<main class="relative z-0">
		<section class="py-32 px-6 lg:px-12 max-w-7xl mx-auto text-center space-y-12">
			<span class="text-xs font-bold text-gold-500 uppercase tracking-widest">Find Your Dream Home</span>
			<h1 class="text-5xl md:text-8xl font-serif tracking-tight leading-none">Discover North <span class="italic text-stone-500">Georgia.</span></h1>
            
            <div class="max-w-2xl mx-auto pt-12">
                <div class="flex flex-col md:flex-row gap-4">
                    <input type="text" placeholder="City, Zip, or Neighborhood" class="flex-1 bg-white border border-stone-200 px-6 py-4 text-sm outline-none focus:border-gold-400 shadow-sm" />
                    <button class="px-10 py-4 bg-navy-900 text-white text-xs font-bold uppercase tracking-widest hover:bg-gold-500 transition-all shadow-lg">
                        Search
                    </button>
                </div>
            </div>
		</section>

		<section class="py-20 px-6 lg:px-12 bg-stone-50">
			<div class="max-w-7xl mx-auto text-center">
                <p class="text-stone-400 italic font-serif text-2xl">Property search engine integration coming soon.</p>
            </div>
		</section>
	</main>
</Layout>
