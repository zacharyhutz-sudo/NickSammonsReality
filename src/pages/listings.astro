---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Curated Listings | Nick Sammons Realty">
	<main class="relative z-0">
		<section class="py-32 px-6 lg:px-12 max-w-7xl mx-auto">
			<div class="space-y-4 mb-20 text-center">
				<span class="text-xs font-bold text-stone-400 uppercase tracking-widest">Portfolio Collection</span>
				<h1 class="text-5xl md:text-8xl font-serif tracking-tight">Curated <span class="italic text-stone-500">Listings</span></h1>
			</div>

			<div class="grid grid-cols-1 md:grid-cols-2 gap-16 lg:gap-24">
				<!-- Property 1 -->
				<div class="group">
					<div class="overflow-hidden aspect-[16/10] mb-8 shadow-sm">
						<img src="/NickSammonsReality/assets/house-1.jpg" alt="Property" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-1000" />
					</div>
					<div class="flex justify-between items-start">
						<div>
							<h3 class="text-3xl font-serif mb-2 group-hover:text-stone-500 transition-colors italic">Modern Hillside Retreat</h3>
							<p class="text-xs text-stone-500 uppercase tracking-widest">North Georgia | $1,850,000</p>
						</div>
					</div>
				</div>

				<!-- Property 2 -->
				<div class="group">
					<div class="overflow-hidden aspect-[16/10] mb-8 shadow-sm">
						<img src="/NickSammonsReality/assets/house-2.jpg" alt="Property" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-1000" />
					</div>
					<div class="flex justify-between items-start">
						<div>
							<h3 class="text-3xl font-serif mb-2 group-hover:text-stone-500 transition-colors italic">Contemporary Estate</h3>
							<p class="text-xs text-stone-500 uppercase tracking-widest">Athens, Georgia | $1,250,000</p>
						</div>
					</div>
				</div>

				<!-- Property 3 -->
				<div class="group">
					<div class="overflow-hidden aspect-[16/10] mb-8 shadow-sm">
						<img src="/NickSammonsReality/assets/house-3.jpg" alt="Property" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-1000" />
					</div>
					<div class="flex justify-between items-start">
						<div>
							<h3 class="text-3xl font-serif mb-2 group-hover:text-stone-500 transition-colors italic">Highlands Sanctuary</h3>
							<p class="text-xs text-stone-500 uppercase tracking-widest">Commerce, Georgia | $950,000</p>
						</div>
					</div>
				</div>
			</div>

			<div class="mt-32 p-16 bg-stone-100 text-center space-y-8">
				<h2 class="text-3xl font-serif italic">Don't see what you're looking for?</h2>
				<p class="text-stone-500 max-w-xl mx-auto">We have access to off-market properties and upcoming listings across the region. Reach out for a custom search tailored to your needs.</p>
				<a href="/NickSammonsReality/contact" class="inline-block px-10 py-4 bg-stone-900 text-white text-[10px] font-bold uppercase tracking-widest">Contact for Custom Search</a>
			</div>
		</section>
	</main>
</Layout>
