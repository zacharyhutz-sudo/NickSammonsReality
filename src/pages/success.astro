---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Thank You | Nick Sammons Realtor">
	<main class="relative z-0 min-h-screen flex items-center justify-center bg-navy-900 overflow-hidden">
        <!-- Background decorative element -->
        <div class="absolute inset-0 opacity-10 grayscale pointer-events-none">
            <img src="/NickSammonsReality/assets/house-1.jpg" alt="Background" class="w-full h-full object-cover" />
        </div>

		<section class="py-16 md:py-32 px-6 lg:px-12 text-center max-w-2xl mx-auto space-y-8 md:space-y-12 relative z-10">
            <div class="space-y-6">
                <img src="/NickSammonsReality/assets/mccall-logo-final.png" alt="Chris McCall Realtor" class="h-16 md:h-24 w-auto mx-auto mb-6 md:mb-10" />
                <br/>
                <span class="text-xs font-bold text-gold-400 uppercase tracking-widest">Submission Received</span>
                <h1 class="text-4xl md:text-7xl font-serif tracking-tight leading-none text-white">Thank <span class="italic text-gold-400">You.</span></h1>
                <p class="text-stone-300 text-lg font-light leading-relaxed">
                    Your inquiry has been successfully received. We appreciate you reaching out and will be in touch with you shortly to discuss your real estate needs.
                </p>
            </div>
            
            <div class="pt-6">
                <a href="/NickSammonsReality/" class="inline-block px-12 py-5 border border-gold-400/30 text-white text-xs font-bold uppercase tracking-widest hover:bg-gold-400 hover:text-white transition-all shadow-xl">
                    Return to Homepage
                </a>
            </div>
		</section>
	</main>
</Layout>
