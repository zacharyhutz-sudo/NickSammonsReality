---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Nick Sammons Realtor | Professional Modern Real Estate">
	<main class="relative z-0">
		<!-- Hero Section -->
		<section class="relative h-[500px] md:h-screen flex items-center justify-center z-0 overflow-hidden">
			<div class="absolute inset-0 bg-navy-900/40 z-10"></div>
			
			<div class="absolute inset-0 z-0 bg-navy-900">
				<img 
					src="/NickSammonsReality/assets/house-1.jpg" 
					alt="Luxury Modern Home" 
					class="w-full h-full object-cover opacity-80"
                    loading="eager"
				/>
			</div>
			
			<div class="relative z-20 text-center px-6">
				<h1 class="text-4xl md:text-8xl text-white font-serif mb-6 md:mb-8 tracking-tight leading-none">
					Exceptional Properties.<br/>
					Unmatched <span class="italic text-white/90 underline decoration-gold-400/40 underline-offset-12">Expertise.</span>
				</h1>
				<p class="text-white text-sm md:text-base uppercase tracking-[0.2em] md:tracking-[0.3em] font-medium mb-8 md:mb-12 drop-shadow-lg">
					Nick Sammons — Your North Georgia REALTOR®
				</p>
				<div class="flex flex-col sm:flex-row items-center justify-center gap-6">
					<a href="/NickSammonsReality/portfolio" class="inline-block px-8 py-4 md:px-10 md:py-5 bg-white text-stone-900 text-xs font-bold uppercase tracking-widest hover:bg-gold-400 hover:text-white transition-all shadow-2xl">
						View Portfolio
					</a>
					<a href="/NickSammonsReality/about" class="inline-block px-8 py-4 md:px-10 md:py-5 border border-white/30 text-white text-xs font-bold uppercase tracking-widest hover:bg-white/10 transition-all">
						Our Story
					</a>
				</div>
			</div>
			<div class="absolute bottom-10 left-1/2 -translate-x-1/2 z-20 hidden md:block animate-bounce">
				<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="white" class="w-6 h-6">
					<path stroke-linecap="round" stroke-linejoin="round" d="M19.5 13.5L12 21m0 0l-7.5-7.5M12 21V3" />
				</svg>
			</div>
		</section>

		<!-- About / Philosophy -->
		<section id="about" class="bg-stone-50 py-16 md:py-32 px-6 lg:px-12">
			<div class="max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-10 md:gap-20 items-center">
				<div class="relative">
					<img 
						src="/NickSammonsReality/assets/nick-headshot.jpg" 
						alt="Nick Sammons" 
						class="w-full h-[400px] md:h-[700px] object-cover grayscale shadow-2xl"
					/>
					<div class="absolute -bottom-10 -left-10 hidden xl:block w-72 h-48 bg-navy-900 p-10 flex flex-col justify-center border-l-4 border-gold-400">
						<p class="text-white text-2xl font-serif italic leading-tight">Expertly Guided.</p>
						<p class="text-gold-500 text-[10px] uppercase tracking-widest mt-4">Nick Sammons</p>
					</div>
				</div>
				<div class="space-y-6 md:space-y-10">
					<span class="text-xs font-bold text-gold-500 uppercase tracking-widest">Our Philosophy</span>
					<h2 class="text-3xl md:text-6xl font-serif tracking-tight leading-tight min-h-[2.5em] md:min-h-[2em]">
						<span id="typing-text-1"></span><br/>
						<span id="typing-text-2" class="italic text-stone-500"></span><span id="cursor" class="border-r-2 border-gold-400 ml-1"></span>
					</h2>
					<p class="text-stone-600 leading-relaxed text-base md:text-lg font-light">
						Nick Sammons Realtor was founded on a singular principle: that real estate should be an elevated experience. We strip away the complexity of traditional brokerage to provide a streamlined, high-tech, and high-touch service for buyers and sellers in the modern age.
					</p>
					<div class="grid grid-cols-2 gap-6 md:gap-12 pt-6">
						<div>
							<h4 class="text-xs font-bold uppercase tracking-widest mb-4 text-navy-900">Integrity</h4>
							<p class="text-sm text-stone-500">Transparent dealings and honest advice at every stage of the transaction.</p>
						</div>
						<div>
							<h4 class="text-xs font-bold uppercase tracking-widest mb-4 text-navy-900">Excellence</h4>
							<p class="text-sm text-stone-500">Obsessive attention to detail in marketing and negotiation strategy.</p>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Scrolling Testimonials -->
		<section id="testimonials-section" class="py-16 md:py-32 bg-stone-100 transition-colors duration-1000 overflow-hidden">
			<div class="max-w-4xl mx-auto px-6">
				<div class="text-center mb-16 md:mb-24">
					<span class="text-xs font-bold text-gold-500 uppercase tracking-widest">Client Feedback</span>
					<h2 id="testimonials-title" class="text-4xl md:text-6xl font-serif mt-4 transition-colors duration-1000">Real <span class="italic text-stone-500">Experiences</span></h2>
				</div>

				<div class="space-y-12 md:space-y-24">
					<!-- Ryan -->
					<div class="testimonial-card opacity-0 translate-x-[-100px] transition-all duration-1000 ease-out flex justify-start">
						<div class="bg-white p-8 md:p-12 shadow-xl border-l-4 border-gold-400 max-w-2xl">
							<div class="flex gap-1 text-gold-500 mb-4 text-xs">
								<span>★</span><span>★</span><span>★</span><span>★</span><span>★</span>
							</div>
							<p class="text-stone-600 italic font-serif text-lg md:text-xl leading-relaxed mb-6">
								"Nick Sammons was absolutely incredible to work with! He showed us a gorgeous home in North Georgia and really took the time to answer every single question we had about the property and the area. From the start, Nick’s professionalism and expertise were evident."
							</p>
							<p class="text-xs font-bold uppercase tracking-widest text-navy-900">— Ryan Jasion</p>
						</div>
					</div>

					<!-- Colin -->
					<div class="testimonial-card opacity-0 translate-x-[100px] transition-all duration-1000 ease-out flex justify-end">
						<div class="bg-white p-8 md:p-12 shadow-xl border-r-4 border-gold-400 max-w-2xl text-right">
							<div class="flex gap-1 text-gold-500 mb-4 text-xs justify-end">
								<span>★</span><span>★</span><span>★</span><span>★</span><span>★</span>
							</div>
							<p class="text-stone-600 italic font-serif text-lg md:text-xl leading-relaxed mb-6">
								"My Fiancée & I told Nick what kind of home we wanted & a couple of different areas we wanted to look around. Nick was quick to research and send us homes that were relevant to us. No wasted time sending us homes that didn't fit our vision."
							</p>
							<p class="text-xs font-bold uppercase tracking-widest text-navy-900">— Colin Stein</p>
						</div>
					</div>

					<!-- Lindsey -->
					<div class="testimonial-card opacity-0 translate-x-[-100px] transition-all duration-1000 ease-out flex justify-start">
						<div class="bg-white p-8 md:p-12 shadow-xl border-l-4 border-gold-400 max-w-2xl">
							<div class="flex gap-1 text-gold-500 mb-4 text-xs">
								<span>★</span><span>★</span><span>★</span><span>★</span><span>★</span>
							</div>
							<p class="text-stone-600 italic font-serif text-lg md:text-xl leading-relaxed mb-6">
								"Nick helped my husband, my in-laws and I find the perfect piece of land! He was so patient, hard-working, and very knowledgeable when it came to our questions and meeting our needs!!!!!! Nick worked diligently from helping us find land to the closing process."
							</p>
							<p class="text-xs font-bold uppercase tracking-widest text-navy-900">— Lindsey Sewell</p>
						</div>
					</div>

					<!-- Cole -->
					<div class="testimonial-card opacity-0 translate-x-[100px] transition-all duration-1000 ease-out flex justify-end">
						<div class="bg-white p-8 md:p-12 shadow-xl border-r-4 border-gold-400 max-w-2xl text-right">
							<div class="flex gap-1 text-gold-500 mb-4 text-xs justify-end">
								<span>★</span><span>★</span><span>★</span><span>★</span><span>★</span>
							</div>
							<p class="text-stone-600 italic font-serif text-lg md:text-xl leading-relaxed mb-6">
								"Nick thank you so much for your help. Your care and attention to detail was exactly what my wife and I were looking for in this stressful process. You took the stress out of our hands and answered any questions we had. I would recommend this young smart man to anyone looking for real estate help!"
							</p>
							<p class="text-xs font-bold uppercase tracking-widest text-navy-900">— Cole Rogers</p>
						</div>
					</div>
				</div>

				<div class="text-center mt-20">
					<a href="/NickSammonsReality/testimonials" id="all-reviews-link" class="text-xs font-bold uppercase tracking-widest border-b border-gold-400 pb-2 hover:text-gold-500 hover:border-gold-500 transition-colors duration-1000">
						Read All Reviews
					</a>
				</div>
			</div>
		</section>

		<!-- Curated Portfolio -->
		<section id="listings" class="py-16 md:py-32 px-6 lg:px-12 max-w-7xl mx-auto">
			<div class="flex flex-col md:flex-row md:items-end justify-between mb-10 md:mb-20 gap-8">
				<div class="space-y-4">
					<span class="text-xs font-bold text-gold-500 uppercase tracking-widest">Selected Properties</span>
					<h2 class="text-4xl md:text-6xl font-serif tracking-tight">Recent <span class="italic text-stone-500">Exchanges</span></h2>
				</div>
				<a href="/NickSammonsReality/portfolio" class="text-xs font-bold uppercase tracking-widest border-b border-gold-400 pb-2 hover:text-gold-500 hover:border-gold-500 transition-all">
					View All Portfolio
				</a>
			</div>

			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10 md:gap-16">
				<!-- Property 1: 259 Dach Bruecke Gasse -->
				<a href="/NickSammonsReality/portfolio#dach-bruecke" class="group block">
					<div class="overflow-hidden aspect-[16/10] mb-4 md:mb-8 shadow-sm">
						<img 
							src="/NickSammonsReality/assets/house-1.jpg" 
							alt="259 Dach Bruecke Gasse" 
							class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
						/>
					</div>
					<div class="flex justify-between items-start">
						<div>
							<h3 class="text-2xl font-serif mb-2 group-hover:text-gold-500 transition-colors">259 Dach Bruecke Gasse</h3>
							<p class="text-xs text-stone-500 uppercase tracking-widest">Helen, Georgia</p>
						</div>
					</div>
				</a>

				<!-- Property 2: 216 Balaban Circle -->
				<a href="/NickSammonsReality/portfolio#balaban-circle" class="group block">
					<div class="overflow-hidden aspect-[16/10] mb-4 md:mb-8 shadow-sm">
						<img 
							src="/NickSammonsReality/assets/house-3.jpg" 
							alt="216 Balaban Circle" 
							class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
						/>
					</div>
					<div class="flex justify-between items-start">
						<div>
							<h3 class="text-2xl font-serif mb-2 group-hover:text-gold-500 transition-colors">216 Balaban Circle</h3>
							<p class="text-xs text-stone-500 uppercase tracking-widest">Woodstock, Georgia</p>
						</div>
					</div>
				</a>

                <!-- Property 3: 0 Victoria Road -->
				<a href="/NickSammonsReality/portfolio#victoria-road" class="group block">
					<div class="overflow-hidden aspect-[16/10] mb-4 md:mb-8 shadow-sm">
						<img 
							src="/NickSammonsReality/assets/0-victoria-road.jpg" 
							alt="0 Victoria Road" 
							class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
						/>
					</div>
					<div class="flex justify-between items-start">
						<div>
							<h3 class="text-2xl font-serif mb-2 group-hover:text-gold-500 transition-colors">0 Victoria Road</h3>
							<p class="text-xs text-stone-500 uppercase tracking-widest">Carlton, Georgia</p>
						</div>
					</div>
				</a>
			</div>
		</section>

		<!-- CTA -->
		<section id="contact" class="py-16 md:py-32 px-6 lg:px-12 text-center max-w-3xl mx-auto">
			<h2 class="text-3xl md:text-6xl font-serif mb-6 md:mb-10 tracking-tight leading-tight">Ready to Find Your <span class="italic">Place?</span></h2>
			<p class="text-stone-500 mb-8 md:mb-12 text-base md:text-lg">Whether you are buying or selling, we are here to provide the modern representation you deserve.</p>
			<form action="https://submit-form.com/fB7dV0UkH" class="space-y-6 text-left mb-12">
                <input type="hidden" name="_redirect" value="https://zacharyhutz-sudo.github.io/NickSammonsReality/success" />
				<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
					<input type="text" name="name" placeholder="FULL NAME" required class="w-full bg-transparent border-b border-stone-300 py-4 text-xs tracking-widest outline-none focus:border-gold-400 transition-colors" />
					<input type="email" name="email" placeholder="EMAIL ADDRESS" required class="w-full bg-transparent border-b border-stone-300 py-4 text-xs tracking-widest outline-none focus:border-gold-400 transition-colors" />
				</div>
				<textarea name="message" placeholder="MESSAGE" rows="4" required class="w-full bg-transparent border-b border-stone-300 py-4 text-xs tracking-widest outline-none focus:border-gold-400 transition-colors"></textarea>
				<button type="submit" class="w-full py-6 bg-navy-900 text-white text-xs font-bold uppercase tracking-widest hover:bg-gold-500 transition-colors mt-8 shadow-xl">
					Send Inquiry
				</button>
			</form>
		</section>

		<script>
			const observerOptions = {
				threshold: 0.2
			};

			const observer = new IntersectionObserver((entries) => {
				entries.forEach(entry => {
					if (entry.isIntersecting) {
						entry.target.classList.remove('opacity-0', 'translate-x-[-100px]', 'translate-x-[100px]');
						entry.target.classList.add('opacity-100', 'translate-x-0');
					}
				});
			}, observerOptions);

			document.querySelectorAll('.testimonial-card').forEach(card => {
				observer.observe(card);
			});

			// Background transition observer
			const sectionObserver = new IntersectionObserver((entries) => {
				entries.forEach(entry => {
					const section = document.getElementById('testimonials-section');
					const title = document.getElementById('testimonials-title');
					const link = document.getElementById('all-reviews-link');
					if (entry.isIntersecting) {
						section.classList.remove('bg-stone-100');
						section.classList.add('bg-navy-900');
						title.classList.add('text-white');
						link.classList.add('text-white');
					} else {
						section.classList.add('bg-stone-100');
						section.classList.remove('bg-navy-900');
						title.classList.remove('text-white');
						link.classList.remove('text-white');
					}
				});
			}, { threshold: 0.1 });

			const testimonialSection = document.getElementById('testimonials-section');
			if (testimonialSection) sectionObserver.observe(testimonialSection);

			// Typing animation
			const typingText1 = document.getElementById('typing-text-1');
			const typingText2 = document.getElementById('typing-text-2');
			const cursor = document.getElementById('cursor');
			const line1 = "Simple. Modern.";
			const line2 = "Always Professional.";
			let hasTyped = false;

			const typingObserver = new IntersectionObserver((entries) => {
				entries.forEach(entry => {
					if (entry.isIntersecting && !hasTyped) {
						hasTyped = true;
						let i = 0;
						let j = 0;
						
						const typeLine2 = () => {
							if (j < line2.length) {
								typingText2.textContent += line2.charAt(j);
								j++;
								setTimeout(typeLine2, 50);
							} else {
								cursor.style.display = 'none';
							}
						};

						const typeLine1 = () => {
							if (i < line1.length) {
								typingText1.textContent += line1.charAt(i);
								i++;
								setTimeout(typeLine1, 50);
							} else {
								typeLine2();
							}
						};
						
						typeLine1();
					}
				});
			}, { threshold: 0.5 });

			if (typingText1) typingObserver.observe(typingText1);
		</script>
	</main>
</Layout>