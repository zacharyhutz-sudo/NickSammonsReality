---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Mortgage Calculator | Nick Sammons Realtor">
  <main class="min-h-screen pt-20 md:pt-32 pb-20 px-6">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-16">
        <h1 class="text-5xl font-serif text-stone-900 mb-4 italic">Mortgage Calculator</h1>
        <div class="h-1 w-20 bg-gold-400 mx-auto"></div>
        <p class="mt-6 text-stone-500 font-light tracking-wide uppercase text-xs">Estimate Your Monthly Payments</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 bg-white p-8 lg:p-12 shadow-sm border border-stone-100 rounded-sm">
        <!-- Inputs -->
        <div class="space-y-8">
          <div>
            <label class="block text-[10px] font-bold uppercase tracking-widest text-stone-400 mb-3">Home Price</label>
            <div class="relative">
              <span class="absolute left-4 top-1/2 -translate-y-1/2 text-stone-400">$</span>
              <input type="number" id="homePrice" value="450000" class="w-full bg-stone-50 border-none p-4 pl-8 text-stone-900 focus:ring-1 focus:ring-gold-400 transition-all outline-none rounded-sm" />
            </div>
          </div>

          <div>
            <label class="block text-[10px] font-bold uppercase tracking-widest text-stone-400 mb-3">Down Payment</label>
            <div class="grid grid-cols-2 gap-4">
              <div class="relative">
                <span class="absolute left-4 top-1/2 -translate-y-1/2 text-stone-400">$</span>
                <input type="number" id="downPaymentAmount" value="90000" class="w-full bg-stone-50 border-none p-4 pl-8 text-stone-900 focus:ring-1 focus:ring-gold-400 transition-all outline-none rounded-sm" />
              </div>
              <div class="relative">
                <span class="absolute right-4 top-1/2 -translate-y-1/2 text-stone-400">%</span>
                <input type="number" id="downPaymentPercent" value="20" class="w-full bg-stone-50 border-none p-4 pr-8 text-stone-900 focus:ring-1 focus:ring-gold-400 transition-all outline-none rounded-sm" />
              </div>
            </div>
          </div>

          <div class="grid grid-cols-2 gap-6">
            <div>
              <label class="block text-[10px] font-bold uppercase tracking-widest text-stone-400 mb-3">Interest Rate</label>
              <div class="relative">
                <span class="absolute right-4 top-1/2 -translate-y-1/2 text-stone-400">%</span>
                <input type="number" id="interestRate" step="0.1" value="6.5" class="w-full bg-stone-50 border-none p-4 pr-8 text-stone-900 focus:ring-1 focus:ring-gold-400 transition-all outline-none rounded-sm" />
              </div>
            </div>
            <div>
              <label class="block text-[10px] font-bold uppercase tracking-widest text-stone-400 mb-3">Loan Term</label>
              <select id="loanTerm" class="w-full bg-stone-50 border-none p-4 text-stone-900 focus:ring-1 focus:ring-gold-400 transition-all outline-none rounded-sm appearance-none cursor-pointer">
                <option value="30">30 Years Fixed</option>
                <option value="20">20 Years Fixed</option>
                <option value="15">15 Years Fixed</option>
                <option value="10">10 Years Fixed</option>
              </select>
            </div>
          </div>

          <div class="space-y-6 pt-4 border-t border-stone-100">
             <div>
              <label class="block text-[10px] font-bold uppercase tracking-widest text-stone-400 mb-3">Property Tax (Annual)</label>
              <div class="relative">
                <span class="absolute left-4 top-1/2 -translate-y-1/2 text-stone-400">$</span>
                <input type="number" id="propertyTax" value="5400" class="w-full bg-stone-50 border-none p-4 pl-8 text-stone-900 focus:ring-1 focus:ring-gold-400 transition-all outline-none rounded-sm" />
              </div>
            </div>
            <div>
              <label class="block text-[10px] font-bold uppercase tracking-widest text-stone-400 mb-3">Home Insurance (Annual)</label>
              <div class="relative">
                <span class="absolute left-4 top-1/2 -translate-y-1/2 text-stone-400">$</span>
                <input type="number" id="insurance" value="1200" class="w-full bg-stone-50 border-none p-4 pl-8 text-stone-900 focus:ring-1 focus:ring-gold-400 transition-all outline-none rounded-sm" />
              </div>
            </div>
            <div>
              <label class="block text-[10px] font-bold uppercase tracking-widest text-stone-400 mb-3">HOA Dues (Monthly)</label>
              <div class="relative">
                <span class="absolute left-4 top-1/2 -translate-y-1/2 text-stone-400">$</span>
                <input type="number" id="hoa" value="0" class="w-full bg-stone-50 border-none p-4 pl-8 text-stone-900 focus:ring-1 focus:ring-gold-400 transition-all outline-none rounded-sm" />
              </div>
            </div>
          </div>
        </div>

        <!-- Results / Form -->
        <div class="bg-stone-950 text-white p-10 flex flex-col justify-center rounded-sm relative overflow-hidden">
          <div class="absolute top-0 right-0 w-32 h-32 bg-gold-400/10 rounded-full -mr-16 -mt-16 blur-3xl"></div>
          
          <div class="relative z-10">
            <!-- Gated State (Form) -->
            <div id="calculator-gate" class="space-y-6">
                <div class="text-center mb-8">
                    <h3 class="text-lg font-serif italic text-gold-400 mb-2">View Your Calculation</h3>
                    <p class="text-[10px] uppercase tracking-widest text-stone-400">Please provide your info to see the full breakdown</p>
                </div>
                
                <form id="gate-form" class="space-y-4">
                    <input type="text" id="gate-name" placeholder="FULL NAME" required class="w-full bg-white/5 border-b border-white/20 p-4 text-xs tracking-widest outline-none focus:border-gold-400 transition-colors" />
                    <input type="email" id="gate-email" placeholder="EMAIL ADDRESS" required class="w-full bg-white/5 border-b border-white/20 p-4 text-xs tracking-widest outline-none focus:border-gold-400 transition-colors" />
                    <button type="submit" class="w-full py-5 bg-gold-400 hover:bg-gold-500 text-stone-950 text-[10px] font-bold uppercase tracking-widest transition-colors shadow-xl mt-4">
                        Calculate Payment
                    </button>
                </form>
                <p class="text-[9px] text-stone-500 text-center uppercase tracking-widest">Your calculation will be sent to your inbox</p>
            </div>

            <!-- Calculation Results (Hidden by default) -->
            <div id="calculator-results" class="hidden">
                <h3 class="text-[10px] font-bold uppercase tracking-[0.2em] text-gold-400 mb-2">Estimated Monthly Payment</h3>
                <div class="text-4xl md:text-6xl font-serif text-white mb-6 md:mb-8" id="monthlyPayment">$0</div>
                
                <div class="space-y-4 pt-8 border-t border-white/10">
                <div class="flex justify-between items-center">
                    <span class="text-xs text-stone-400 uppercase tracking-widest">Principal & Interest</span>
                    <span class="text-sm font-medium" id="resPrincipal">$0</span>
                </div>
                <div class="flex justify-between items-center">
                    <span class="text-xs text-stone-400 uppercase tracking-widest">Property Taxes</span>
                    <span class="text-sm font-medium" id="resTaxes">$0</span>
                </div>
                <div class="flex justify-between items-center">
                    <span class="text-xs text-stone-400 uppercase tracking-widest">Home Insurance</span>
                    <span class="text-sm font-medium" id="resInsurance">$0</span>
                </div>
                <div class="flex justify-between items-center">
                    <span class="text-xs text-stone-400 uppercase tracking-widest">HOA Dues</span>
                    <span class="text-sm font-medium" id="resHoa">$0</span>
                </div>
                </div>

                <div class="mt-12">
                <a href="/NickSammonsReality/contact" class="block w-full py-4 bg-gold-400 hover:bg-gold-500 text-stone-950 text-center text-[10px] font-bold uppercase tracking-widest transition-colors rounded-sm">Get Pre-Approved</a>
                <button id="resetBtn" class="block w-full mt-4 text-[10px] uppercase tracking-widest text-stone-500 hover:text-white transition-colors">Start New Calculation</button>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <script>
    const inputs = [
      'homePrice', 'downPaymentAmount', 'downPaymentPercent', 
      'interestRate', 'loanTerm', 'propertyTax', 'insurance', 'hoa'
    ];

    let calculationData = {};

    function calculate() {
      const homePrice = parseFloat(document.getElementById('homePrice').value) || 0;
      const downPayment = parseFloat(document.getElementById('downPaymentAmount').value) || 0;
      const interestRateRaw = parseFloat(document.getElementById('interestRate').value) || 0;
      const interestRate = interestRateRaw / 100 / 12;
      const loanTermYears = parseFloat(document.getElementById('loanTerm').value) || 0;
      const loanTerm = loanTermYears * 12;
      const annualTax = parseFloat(document.getElementById('propertyTax').value) || 0;
      const annualInsurance = parseFloat(document.getElementById('insurance').value) || 0;
      const monthlyHoa = parseFloat(document.getElementById('hoa').value) || 0;

      const loanAmount = homePrice - downPayment;
      
      let monthlyPI = 0;
      if (interestRate === 0) {
        monthlyPI = loanAmount / (loanTerm || 1);
      } else {
        monthlyPI = loanAmount * (interestRate * Math.pow(1 + interestRate, loanTerm)) / (Math.pow(1 + interestRate, loanTerm) - 1);
      }

      const monthlyTax = annualTax / 12;
      const monthlyInsurance = annualInsurance / 12;
      const totalMonthly = monthlyPI + monthlyTax + monthlyInsurance + monthlyHoa;

      // Store data for submission
      calculationData = {
        "Home Price": '$' + homePrice.toLocaleString(),
        "Down Payment": '$' + downPayment.toLocaleString(),
        "Interest Rate": interestRateRaw + '%',
        "Term": loanTermYears + ' Years',
        "Monthly Principal & Interest": '$' + Math.round(monthlyPI).toLocaleString(),
        "Monthly Property Tax": '$' + Math.round(monthlyTax).toLocaleString(),
        "Monthly Home Insurance": '$' + Math.round(monthlyInsurance).toLocaleString(),
        "Monthly HOA Dues": '$' + Math.round(monthlyHoa).toLocaleString(),
        "Total Monthly Payment": '$' + Math.round(totalMonthly).toLocaleString()
      };

      document.getElementById('monthlyPayment').textContent = calculationData["Total Monthly Payment"];
      document.getElementById('resPrincipal').textContent = calculationData["Monthly Principal & Interest"];
      document.getElementById('resTaxes').textContent = '$' + Math.round(monthlyTax).toLocaleString();
      document.getElementById('resInsurance').textContent = '$' + Math.round(monthlyInsurance).toLocaleString();
      document.getElementById('resHoa').textContent = '$' + Math.round(monthlyHoa).toLocaleString();
    }

    // Sync down payment percent and amount
    document.getElementById('downPaymentAmount').addEventListener('input', (e) => {
      const homePrice = parseFloat(document.getElementById('homePrice').value) || 0;
      if (homePrice > 0) {
        const percent = (parseFloat(e.target.value) / homePrice) * 100;
        document.getElementById('downPaymentPercent').value = percent.toFixed(1);
      }
      calculate();
    });

    document.getElementById('downPaymentPercent').addEventListener('input', (e) => {
      const homePrice = parseFloat(document.getElementById('homePrice').value) || 0;
      const amount = (parseFloat(e.target.value) / 100) * homePrice;
      document.getElementById('downPaymentAmount').value = Math.round(amount);
      calculate();
    });

    document.getElementById('homePrice').addEventListener('input', () => {
      const homePrice = parseFloat(document.getElementById('homePrice').value) || 0;
      const percent = parseFloat(document.getElementById('downPaymentPercent').value) || 0;
      const amount = (percent / 100) * homePrice;
      document.getElementById('downPaymentAmount').value = Math.round(amount);
      calculate();
    });

    inputs.forEach(id => {
      if (id !== 'downPaymentAmount' && id !== 'downPaymentPercent' && id !== 'homePrice') {
        document.getElementById(id).addEventListener('input', calculate);
      }
    });

    // Form Handling
    const gateForm = document.getElementById('gate-form');
    const calcGate = document.getElementById('calculator-gate');
    const calcResults = document.getElementById('calculator-results');

    gateForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const name = document.getElementById('gate-name').value;
        const email = document.getElementById('gate-email').value;

        // Visual change immediately
        calcGate.classList.add('hidden');
        calcResults.classList.remove('hidden');

        // Submit to Formspark
        try {
            await fetch("https://submit-form.com/fB7dV0UkH", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                    Accept: "application/json",
                },
                body: JSON.stringify({
                    "Customer Name": name,
                    "Customer Email": email,
                    subject: "New Mortgage Calculation - Nick Sammons Realtor",
                    ...calculationData
                }),
            });
        } catch (error) {
            console.error("Formspark submission failed", error);
        }
    });

    document.getElementById('resetBtn').addEventListener('click', () => {
      calcResults.classList.add('hidden');
      calcGate.classList.remove('hidden');
      
      // Reset values to defaults
      document.getElementById('homePrice').value = 450000;
      document.getElementById('downPaymentAmount').value = 90000;
      document.getElementById('downPaymentPercent').value = 20;
      document.getElementById('interestRate').value = 6.5;
      document.getElementById('loanTerm').value = 30;
      document.getElementById('propertyTax').value = 5400;
      document.getElementById('insurance').value = 1200;
      document.getElementById('hoa').value = 0;
      document.getElementById('gate-name').value = '';
      document.getElementById('gate-email').value = '';
      calculate();
    });

    calculate();
  </script>
</Layout>
