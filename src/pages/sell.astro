---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Sell Your Home | Nick Sammons Realtor">
	<main class="relative z-0">
		<section class="relative py-20 md:py-32 px-6 lg:px-12 bg-navy-900 text-white overflow-hidden">
			<div class="max-w-4xl mx-auto text-center space-y-6 md:space-y-8 relative z-20 reveal">
				<span class="text-xs font-bold text-gold-500 uppercase tracking-widest">Home Valuation</span>
				<h1 class="text-4xl md:text-8xl font-serif tracking-tight leading-none">What Is Your <span class="italic text-gold-400">Home Worth?</span></h1>
				<p class="text-stone-400 text-base md:text-lg font-light leading-relaxed max-w-2xl mx-auto">
					Get an instant property valuation and expert advice on how to sell your home for more in the current North Georgia market.
				</p>
			</div>
            <div class="absolute inset-0 opacity-10 grayscale">
                <img src="/assets/house-1.jpg" alt="Background" class="w-full h-full object-cover" />
            </div>
		</section>

		<section class="py-16 md:py-32 px-6 lg:px-12 max-w-3xl mx-auto reveal" style="transition-delay: 0.2s;">
			<div class="bg-white p-6 md:p-12 lg:p-20 shadow-2xl border border-stone-100 -mt-20 relative z-30">
                <h3 class="text-2xl font-serif mb-10 text-center">Inquire About Selling</h3>
                <form action="https://submit-form.com/fB7dV0UkH" class="space-y-8">
                    <input type="hidden" name="_redirect" value="https://zacharyhutz-sudo.github.io/success" />
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                        <div class="space-y-2">
                            <label class="text-[10px] font-bold uppercase tracking-widest text-stone-400">Property Address</label>
                            <input type="text" name="Property Address" required class="w-full bg-transparent border-b border-stone-200 py-3 text-sm outline-none focus:border-gold-400 transition-colors" />
                        </div>
                        <div class="space-y-2">
                            <label class="text-[10px] font-bold uppercase tracking-widest text-stone-400">City</label>
                            <input type="text" name="City" required class="w-full bg-transparent border-b border-stone-200 py-3 text-sm outline-none focus:border-gold-400 transition-colors" />
                        </div>
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                        <div class="space-y-2">
                            <label class="text-[10px] font-bold uppercase tracking-widest text-stone-400">Full Name</label>
                            <input type="text" name="Full Name" required class="w-full bg-transparent border-b border-stone-200 py-3 text-sm outline-none focus:border-gold-400 transition-colors" />
                        </div>
                        <div class="space-y-2">
                            <label class="text-[10px] font-bold uppercase tracking-widest text-stone-400">Email Address</label>
                            <input type="email" name="Email Address" required class="w-full bg-transparent border-b border-stone-200 py-3 text-sm outline-none focus:border-gold-400 transition-colors" />
                        </div>
                    </div>
                    <button type="submit" class="w-full py-6 bg-navy-900 text-white text-xs font-bold uppercase tracking-widest hover:bg-gold-500 transition-all shadow-xl">
                        Request Valuation
                    </button>
                </form>
            </div>
		</section>
	</main>
</Layout>
