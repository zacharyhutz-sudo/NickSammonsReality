---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact Us | Nick Sammons Realty">
	<main class="relative z-0">
		<section class="py-32 px-6 lg:px-12 max-w-7xl mx-auto flex flex-col lg:flex-row gap-20">
			<div class="lg:w-1/3 space-y-12">
				<div class="space-y-4">
					<span class="text-xs font-bold text-stone-400 uppercase tracking-widest">Inquiries</span>
					<h1 class="text-5xl md:text-7xl font-serif tracking-tight leading-none italic">Let's <span class="not-italic text-stone-900">Talk.</span></h1>
				</div>
				
				<div class="space-y-8">
					<div class="space-y-2">
						<p class="text-[10px] font-bold uppercase tracking-widest text-stone-400">Direct</p>
						<p class="text-xl font-serif">(555) 123-4567</p>
					</div>
					<div class="space-y-2">
						<p class="text-[10px] font-bold uppercase tracking-widest text-stone-400">Email</p>
						<p class="text-xl font-serif underline decoration-stone-200 underline-offset-8">nick@sammonsrealty.com</p>
					</div>
					<div class="space-y-2">
						<p class="text-[10px] font-bold uppercase tracking-widest text-stone-400">Office</p>
						<p class="text-stone-600 font-light italic">Chris McCall Realty<br/>North Georgia</p>
					</div>
				</div>
			</div>

			<div class="lg:w-2/3 bg-white p-8 lg:p-20 shadow-2xl shadow-stone-200">
				<form class="space-y-10">
					<div class="grid grid-cols-1 md:grid-cols-2 gap-10">
						<div class="space-y-4">
							<label class="text-[10px] font-bold uppercase tracking-[0.2em] text-stone-400">Full Name</label>
							<input type="text" class="w-full bg-transparent border-b border-stone-200 py-3 outline-none focus:border-stone-900 transition-colors" />
						</div>
						<div class="space-y-4">
							<label class="text-[10px] font-bold uppercase tracking-[0.2em] text-stone-400">Email Address</label>
							<input type="email" class="w-full bg-transparent border-b border-stone-200 py-3 outline-none focus:border-stone-900 transition-colors" />
						</div>
					</div>
					<div class="space-y-4">
						<label class="text-[10px] font-bold uppercase tracking-[0.2em] text-stone-400">Subject</label>
						<select class="w-full bg-transparent border-b border-stone-200 py-3 outline-none focus:border-stone-900 transition-colors appearance-none">
							<option>Buying a Property</option>
							<option>Selling a Property</option>
							<option>Investment Opportunities</option>
							<option>General Inquiry</option>
						</select>
					</div>
					<div class="space-y-4">
						<label class="text-[10px] font-bold uppercase tracking-[0.2em] text-stone-400">Your Message</label>
						<textarea rows="6" class="w-full bg-transparent border-b border-stone-200 py-3 outline-none focus:border-stone-900 transition-colors"></textarea>
					</div>
					<button class="w-full py-6 bg-stone-900 text-white text-xs font-bold uppercase tracking-widest hover:bg-stone-800 transition-all active:scale-[0.99] shadow-lg">
						Send Secure Message
					</button>
				</form>
			</div>
		</section>
	</main>
</Layout>
