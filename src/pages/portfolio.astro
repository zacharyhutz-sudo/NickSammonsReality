---
import Layout from '../layouts/Layout.astro';
---

<Layout 
	title="Modern Property Portfolio | Nick Sammons Realtor Cleveland GA"
	description="Explore featured luxury homes and modern properties sold by Nick Sammons across Cleveland, GA and the North Georgia mountains."
>
	<main class="relative z-0 bg-stone-50 min-h-screen">
		<!-- Header Section -->
		<section class="pt-24 md:pt-40 pb-16 px-6 lg:px-12 max-w-7xl mx-auto reveal">
			<div class="space-y-4">
				<span class="text-xs font-bold text-gold-500 uppercase tracking-widest">Properties</span>
				<h1 class="text-4xl md:text-8xl font-serif tracking-tight leading-none italic">The <span class="not-italic text-stone-900">Portfolio.</span></h1>
				<p class="text-stone-500 max-w-2xl text-sm md:text-base font-light leading-relaxed pt-4">
					A curated selection of North Georgia real estate, from historic Helen getaways to modern family residences. Each property represents a commitment to excellence and professional representation.
				</p>
			</div>
		</section>

		<!-- Active Listings -->
		<section class="py-12 md:py-20 px-6 lg:px-12 max-w-7xl mx-auto reveal">
			<div class="flex items-center gap-6 mb-12">
				<h2 class="text-xs font-bold uppercase tracking-[0.3em] text-navy-900 whitespace-nowrap">Active Listings</h2>
				<div class="h-px bg-stone-200 flex-1"></div>
			</div>
			
			<div class="grid grid-cols-1 md:grid-cols-2 gap-12 reveal-stagger">
				<!-- Listing: 88 Old Vineyard Way -->
				<div class="group">
					<div class="aspect-[16/10] bg-stone-200 mb-6 overflow-hidden relative">
						<img src="/assets/88vineyardway_new.jpg" alt="Modern 88 Old Vineyard Way property rental in Cleveland Georgia" class="w-full h-full object-cover group-hover:scale-105 transition-all duration-700" />
						<div class="absolute top-4 left-4 bg-navy-900 text-white px-3 py-1 text-[8px] font-bold uppercase tracking-widest">
							Active Rental
						</div>
					</div>
					<div class="space-y-2">
						<h3 class="text-2xl font-serif">88 Old Vineyard Way</h3>
						<p class="text-[10px] uppercase tracking-widest text-stone-400">Cleveland, Georgia — $1,400/mo</p>
					</div>
				</div>

				<!-- Mock Active Property -->
				<div class="group cursor-default opacity-50">
					<div class="aspect-[16/10] bg-stone-200 mb-6 overflow-hidden">
						<img src="/assets/house-3.jpg" alt="Upcoming modern luxury home for sale in North Georgia" class="w-full h-full object-cover grayscale transition-all duration-700" />
					</div>
					<div class="space-y-2">
						<h3 class="text-2xl font-serif italic text-stone-400">Coming Soon</h3>
						<p class="text-[10px] uppercase tracking-widest text-stone-400">North Georgia</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Sold Portfolio -->
		<section class="py-12 md:py-32 px-6 lg:px-12 max-w-7xl mx-auto">
			<div class="flex items-center gap-6 mb-12 reveal">
				<h2 class="text-xs font-bold uppercase tracking-[0.3em] text-navy-900 whitespace-nowrap">Sold Portfolio</h2>
				<div class="h-px bg-stone-200 flex-1"></div>
			</div>

			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12 md:gap-20 reveal-stagger">
				<!-- Property 1 -->
				<div id="dach-bruecke" class="group">
					<div class="aspect-square bg-stone-200 mb-8 overflow-hidden">
						<img src="/assets/dach-bruecke-new.png" alt="Modern luxury home 259 Dach Bruecke Gasse sold by Nick Sammons in Helen Georgia" class="w-full h-full object-cover grayscale hover:grayscale-0 transition-all duration-1000" />
					</div>
					<div class="space-y-3">
						<h3 class="text-2xl font-serif">259 Dach Bruecke Gasse</h3>
						<p class="text-[10px] uppercase tracking-widest text-stone-400 italic">Sold February 2026 — $379,900</p>
						<p class="text-sm text-stone-500 font-light leading-relaxed">Represented Buyer & Seller</p>
					</div>
				</div>

				<!-- Property 2 -->
				<div id="balaban-circle" class="group">
					<div class="aspect-square bg-stone-200 mb-8 overflow-hidden">
						<img src="/assets/balaban-new.png" alt="Modern luxury home 216 Balaban Circle sold by Nick Sammons in North Georgia" class="w-full h-full object-cover grayscale hover:grayscale-0 transition-all duration-1000" />
					</div>
					<div class="space-y-3">
						<h3 class="text-2xl font-serif">216 Balaban Circle</h3>
						<p class="text-[10px] uppercase tracking-widest text-stone-400 italic">Sold October 2025 — $350,000</p>
						<p class="text-sm text-stone-500 font-light leading-relaxed">Represented Buyer</p>
					</div>
				</div>

				<!-- Property 3 -->
				<div id="victoria-road" class="group">
					<div class="aspect-square bg-stone-200 mb-8 overflow-hidden">
						<img src="/assets/0-victoria-road.jpg" alt="Luxury land property 0 Victoria Road sold by Nick Sammons in White County Georgia" class="w-full h-full object-cover grayscale hover:grayscale-0 transition-all duration-1000" />
					</div>
					<div class="space-y-3">
						<h3 class="text-2xl font-serif">0 Victoria Road</h3>
						<p class="text-[10px] uppercase tracking-widest text-stone-400 italic">Sold December 2024 — $210,000</p>
						<p class="text-sm text-stone-500 font-light leading-relaxed">Represented Buyer & Seller</p>
					</div>
				</div>
			</div>
		</section>
	</main>
</Layout>
