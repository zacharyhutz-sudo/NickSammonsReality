---
interface Props {
	title: string;
}

const { title } = Astro.props;
import '../styles/global.css';
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Nick Sammons Realty - Professional Real Estate Services" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/NickSammonsReality/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;600&family=Montserrat:wght@300;400;500;700&display=swap" rel="stylesheet">
	</head>
	<body class="bg-[#faf9f6] text-[#1a1a1a] font-sans overflow-x-hidden">
		<!-- Main Header -->
		<header class="w-full bg-white border-b border-stone-200 relative z-[60]">
			<div class="max-w-7xl mx-auto px-6 lg:px-12 py-8 flex justify-between items-center">
				<a href="/NickSammonsReality/" class="flex items-center gap-4 group">
					<img src="/NickSammonsReality/assets/agency-logo.png" alt="Agency Logo" class="h-10 w-auto" />
					<div class="h-8 w-px bg-stone-200"></div>
					<span class="text-xl font-serif font-semibold tracking-tight text-stone-900">
						NICK SAMMONS <span class="font-light text-stone-500 text-sm uppercase tracking-widest ml-1">Realty</span>
					</span>
				</a>
				<div class="flex items-center gap-10">
					<div class="hidden md:flex space-x-10 text-xs font-medium uppercase tracking-[0.2em] text-stone-600">
						<a href="#listings" class="hover:text-stone-900 transition-colors">Listings</a>
						<a href="#about" class="hover:text-stone-900 transition-colors">About</a>
						<a href="#contact" class="hover:text-stone-900 transition-colors">Contact</a>
					</div>
					
					<!-- The "Mother" Cell (Source for Mitosis) -->
					<div id="nav-trigger-container" class="relative w-14 h-14">
						<button id="nav-mother" class="flex items-center justify-center w-full h-full bg-stone-100 text-stone-900 rounded-full hover:bg-stone-200 transition-colors">
							<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
								<path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
							</svg>
						</button>
					</div>
				</div>
			</div>
		</header>

		<!-- The "Daughter" Cell (Sticking Pill) -->
		<nav id="floating-nav" class="fixed top-8 right-8 z-50 pointer-events-none opacity-0 scale-50 transition-all duration-700 ease-[cubic-bezier(0.34,1.56,0.64,1)]">
			<button class="pointer-events-auto group relative flex items-center justify-center w-14 h-14 bg-stone-900 text-white rounded-full shadow-2xl hover:scale-110 active:scale-95 transition-all">
				<div class="absolute inset-0 bg-stone-900 rounded-full group-hover:animate-teardrop -z-10"></div>
				<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
					<path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
				</svg>
			</button>
		</nav>

		<slot />

		<script>
			const floatingNav = document.getElementById('floating-nav');
			const mother = document.getElementById('nav-mother');
			const triggerContainer = document.getElementById('nav-trigger-container');

			window.addEventListener('scroll', () => {
				const rect = triggerContainer?.getBoundingClientRect();
				const isOffScreen = rect && rect.top < 0;

				if (isOffScreen) {
					// Daughter cell "matures" and sticks
					floatingNav?.classList.remove('opacity-0', 'scale-50', 'pointer-events-none');
					floatingNav?.classList.add('opacity-100', 'scale-100');
					mother?.classList.add('opacity-0', 'scale-50');
				} else {
					// Daughter cell "re-merges" into the mother
					floatingNav?.classList.add('opacity-0', 'scale-50', 'pointer-events-none');
					floatingNav?.classList.remove('opacity-100', 'scale-100');
					mother?.classList.remove('opacity-0', 'scale-50');
				}
			});
		</script>
		
		<footer class="bg-stone-900 text-stone-400 py-20 px-6 lg:px-12">
			<div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-12 border-b border-stone-800 pb-20">
				<div class="space-y-6">
					<h3 class="text-xl font-serif text-white tracking-tight">NICK SAMMONS REALTY</h3>
					<p class="text-sm leading-relaxed max-w-xs">Redefining luxury real estate through simple, modern, and professional service across the region.</p>
				</div>
				<div class="space-y-6">
					<h4 class="text-xs font-bold text-white uppercase tracking-widest">Contact</h4>
					<p class="text-sm">Commerce, Georgia<br/>nick@sammonsrealty.com<br/>(555) 123-4567</p>
				</div>
				<div class="space-y-6">
					<h4 class="text-xs font-bold text-white uppercase tracking-widest">Follow</h4>
					<div class="flex space-x-4">
						<a href="#" class="hover:text-white transition-colors">Instagram</a>
						<a href="#" class="hover:text-white transition-colors">Facebook</a>
						<a href="#" class="hover:text-white transition-colors">LinkedIn</a>
					</div>
				</div>
			</div>
			<div class="max-w-7xl mx-auto pt-10 flex flex-col md:flex-row justify-between items-center text-[10px] uppercase tracking-widest">
				<p>Â© 2026 Nick Sammons Realty. All Rights Reserved.</p>
				<p class="mt-4 md:mt-0">Design by Sam</p>
			</div>
		</footer>
	</body>
</html>

<style is:global>
	:root {
		--font-serif: 'Cormorant Garamond', serif;
		--font-sans: 'Montserrat', sans-serif;
	}
	body {
		font-family: var(--font-sans);
	}
	h1, h2, h3, .font-serif {
		font-family: var(--font-serif);
	}

	@keyframes teardrop {
		0% {
			transform: scale(1);
			opacity: 1;
			border-radius: 50%;
		}
		100% {
			transform: scale(1.8);
			opacity: 0;
			border-radius: 50% 50% 50% 0%;
		}
	}
	.group:hover .group-hover\:animate-teardrop {
		animation: teardrop 0.8s cubic-bezier(0.4, 0, 0.2, 1) infinite;
	}
</style>
