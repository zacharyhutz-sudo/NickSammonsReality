---
interface Props {
	title: string;
}

const { title } = Astro.props;
import '../styles/global.css';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Nick Sammons Realty - Professional Real Estate Services" />
		<meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
		<link rel="icon" type="image/svg+xml" href="/NickSammonsReality/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,600;1,400;1,600&family=Montserrat:wght@300;400;500;700&display=swap" rel="stylesheet">
	</head>
	<body class="bg-[#faf9f6] text-[#1a1a1a] font-sans overflow-x-hidden selection:bg-gold-400/30">

		<!-- Main Header -->
		<header id="site-header" class="w-full bg-navy-900 relative z-[100] transition-all duration-75">
			<div class="w-full px-6 lg:px-12 py-8 flex justify-between items-center relative">
				<a href="/NickSammonsReality/" class="flex items-center gap-4 group">
					<img src="/NickSammonsReality/assets/mccall-logo-v2.png" alt="Agency Logo" class="h-12 w-auto" />
					<div class="h-8 w-px bg-white/20"></div>
					<span class="text-xl font-serif font-semibold tracking-tight text-white group-hover:text-gold-400 transition-colors">
						NICK SAMMONS <span class="font-light text-white/40 text-sm uppercase tracking-widest ml-1 group-hover:text-gold-400">Realty</span>
					</span>
				</a>
				<div class="flex items-center gap-10">
					<div class="hidden md:flex space-x-8 text-[10px] font-bold uppercase tracking-[0.2em] text-white/70">
						<a href="/NickSammonsReality/" class="hover:text-gold-400 transition-colors">Home</a>
						<a href="/NickSammonsReality/search" class="hover:text-gold-400 transition-colors">Search Homes</a>
						<a href="/NickSammonsReality/sell" class="hover:text-gold-400 transition-colors">Sell Your Home</a>
						<a href="/NickSammonsReality/testimonials" class="hover:text-gold-400 transition-colors">Testimonials</a>
						<a href="/NickSammonsReality/about" class="hover:text-gold-400 transition-colors">About Nick</a>
						<a href="/NickSammonsReality/calculator" class="hover:text-gold-400 transition-colors">Mortgage Calculator</a>
						<a href="/NickSammonsReality/contact" class="hover:text-gold-400 transition-colors">Contact</a>
					</div>
					
					<div id="header-nav-container" class="relative w-14 h-14">
                        <button id="nav-trigger" class="nav-toggle relative z-10 flex items-center justify-center w-full h-full bg-white/5 text-white rounded-full border border-white/10 shadow-sm hover:border-gold-400/50 transition-all duration-300">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                            </svg>
                        </button>
					</div>
				</div>
			</div>
			<div class="absolute bottom-0 left-0 w-full h-px bg-white/5"></div>
		</header>

		<nav id="floating-nav" class="fixed z-[110] pointer-events-none opacity-0 translate-y-4 transition-all duration-500 ease-out" style="top: 32px; right: var(--nav-right-offset, 24px);">
			<button class="nav-toggle pointer-events-auto group relative flex items-center justify-center w-14 h-14 bg-white text-stone-900 rounded-full border border-stone-100 shadow-2xl hover:border-gold-400/50 transition-all duration-300">
				<div class="absolute inset-0 bg-gold-400/5 rounded-full group-hover:animate-teardrop -z-10"></div>
				<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
					<path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
				</svg>
			</button>
		</nav>

		<!-- Fullscreen Navigation Sidebar -->
		<div id="nav-sidebar" class="fixed inset-0 z-[120] pointer-events-none opacity-0 transition-opacity duration-700 ease-in-out">
			<div id="nav-overlay" class="absolute inset-0 bg-stone-950/60 transition-all duration-700 ease-in-out"></div>
			<div id="nav-panel" class="absolute top-0 right-0 w-full max-w-md h-full bg-white shadow-2xl translate-x-full transition-transform duration-500 ease-out flex flex-col p-12 lg:p-20 border-l border-gold-400/10">
				<div class="flex justify-end mb-12 lg:mb-20">
					<button id="nav-close" class="text-stone-400 hover:text-gold-500 transition-colors p-2">
						<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10">
							<path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
						</svg>
					</button>
				</div>
				
				<div class="flex-1 flex flex-col justify-start pt-10 space-y-6">
					<a href="/NickSammonsReality/" class="text-2xl font-serif text-stone-900 hover:text-gold-500 hover:italic transition-all pointer-events-auto">Home</a>
					<a href="/NickSammonsReality/listings" class="text-2xl font-serif text-stone-900 hover:text-gold-500 hover:italic transition-all pointer-events-auto">Current Listings</a>
					<a href="/NickSammonsReality/search" class="text-2xl font-serif text-stone-900 hover:text-gold-500 hover:italic transition-all pointer-events-auto">Search Homes</a>
					<a href="/NickSammonsReality/sell" class="text-2xl font-serif text-stone-900 hover:text-gold-500 hover:italic transition-all pointer-events-auto">Sell Your Home</a>
					<a href="/NickSammonsReality/testimonials" class="text-2xl font-serif text-stone-900 hover:text-gold-500 hover:italic transition-all pointer-events-auto">Testimonials</a>
					<a href="/NickSammonsReality/about" class="text-2xl font-serif text-stone-900 hover:text-gold-500 hover:italic transition-all pointer-events-auto">About Nick</a>
					<a href="/NickSammonsReality/calculator" class="text-2xl font-serif text-stone-900 hover:text-gold-500 hover:italic transition-all pointer-events-auto">Mortgage Calculator</a>
					<a href="/NickSammonsReality/contact" class="text-2xl font-serif text-stone-900 hover:text-gold-500 hover:italic transition-all pointer-events-auto">Contact Us</a>
				</div>

				<div class="pt-12 border-t border-stone-100 mt-auto">
					<p class="text-[10px] font-bold uppercase tracking-widest text-gold-500 mb-4">Get In Touch</p>
					<a href="mailto:nick@mccallproperties.com" class="text-sm font-medium text-stone-900 hover:text-gold-500 pointer-events-auto">nick@mccallproperties.com</a>
					<div class="flex gap-6 mt-8 text-stone-900">
						<a href="#" class="text-xs uppercase tracking-widest hover:text-gold-500 pointer-events-auto">Instagram</a>
						<a href="#" class="text-xs uppercase tracking-widest hover:text-gold-500 pointer-events-auto">LinkedIn</a>
					</div>
				</div>
			</div>
		</div>

		<slot />

		<script>
			const floatingNav = document.getElementById('floating-nav');
			const headerTrigger = document.getElementById('nav-trigger');
			const navSidebar = document.getElementById('nav-sidebar');
			const navPanel = document.getElementById('nav-panel');
			const navOverlay = document.getElementById('nav-overlay');
			const navClose = document.getElementById('nav-close');
			const toggles = document.querySelectorAll('.nav-toggle');

			function syncResponsivePadding() {
				if (headerTrigger && floatingNav) {
					const rect = headerTrigger.getBoundingClientRect();
					const exactRightPx = window.innerWidth - rect.right;
					document.documentElement.style.setProperty('--nav-right-offset', `${exactRightPx}px`);
					floatingNav.style.right = `${exactRightPx}px`;
				}
			}

			window.addEventListener('load', syncResponsivePadding);
			window.addEventListener('resize', syncResponsivePadding);
			[100, 500, 1000].forEach(delay => setTimeout(syncResponsivePadding, delay));

			function updateStickyNav() {
				const scrollY = window.scrollY;
				const threshold = 100;

				if (scrollY > threshold) {
					if (floatingNav) {
						floatingNav.classList.remove('opacity-0', 'translate-y-4', 'pointer-events-none');
						floatingNav.classList.add('opacity-100', 'translate-y-0', 'pointer-events-auto');
					}
					if (headerTrigger) {
						headerTrigger.style.opacity = '0';
						headerTrigger.style.pointerEvents = 'none';
					}
				} else {
					if (floatingNav) {
						floatingNav.classList.add('opacity-0', 'translate-y-4', 'pointer-events-none');
						floatingNav.classList.remove('opacity-100', 'translate-y-0', 'pointer-events-auto');
					}
					if (headerTrigger) {
						headerTrigger.style.opacity = '1';
						headerTrigger.style.pointerEvents = 'auto';
					}
				}
			}

			let ticking = false;
			window.addEventListener('scroll', () => {
				if (!ticking) {
					window.requestAnimationFrame(() => {
						updateStickyNav();
						ticking = false;
					});
					ticking = true;
				}
			}, { passive: true });

			const openNav = () => {
				navSidebar?.classList.remove('pointer-events-none', 'opacity-0');
				navSidebar?.classList.add('opacity-100');
				navPanel?.classList.remove('translate-x-full');
			};

			const closeNav = () => {
				navPanel?.classList.add('translate-x-full');
				navSidebar?.classList.remove('opacity-100');
				navSidebar?.classList.add('opacity-0');
				setTimeout(() => {
					navSidebar?.classList.add('pointer-events-none');
				}, 700);
			};

			toggles.forEach(btn => btn.addEventListener('click', openNav));
			navClose?.addEventListener('click', closeNav);
			navOverlay?.addEventListener('click', closeNav);
		</script>
		
		<footer class="bg-navy-950 text-stone-400 py-20 px-6 lg:px-12 border-t border-gold-400/20">
			<div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-12 border-b border-white/10 pb-20">
				<div class="space-y-6">
					<img src="/NickSammonsReality/assets/mccall-logo-v2.jpg" alt="McCall Realty" class="h-10 w-auto opacity-90" />
					<h3 class="text-xl font-serif text-white tracking-tight underline decoration-gold-400/30 underline-offset-8">NICK SAMMONS REALTY</h3>
					<p class="text-sm leading-relaxed max-w-xs text-stone-500 italic">Professional real estate services with a commitment to excellence and brand integrity.</p>
				</div>
				<div class="space-y-6">
					<h4 class="text-xs font-bold text-white uppercase tracking-widest">Connect</h4>
					<p class="text-sm">5258 Cleveland Hwy<br/>Clermont, GA 30527<br/>nick@mccallproperties.com<br/>(470) 309-3309</p>
				</div>
				<div class="space-y-6">
					<h4 class="text-xs font-bold text-white uppercase tracking-widest">Navigation</h4>
					<div class="flex flex-col space-y-3">
						<a href="/NickSammonsReality/search" class="hover:text-gold-400 transition-colors text-sm">Search Homes</a>
						<a href="/NickSammonsReality/sell" class="hover:text-gold-400 transition-colors text-sm">Sell Your Home</a>
						<a href="/NickSammonsReality/calculator" class="hover:text-gold-400 transition-colors text-sm">Mortgage Calculator</a>
						<a href="/NickSammonsReality/testimonials" class="hover:text-gold-400 transition-colors text-sm">Testimonials</a>
					</div>
				</div>
			</div>
			<div class="max-w-7xl mx-auto pt-10 flex flex-col md:flex-row justify-between items-center text-[10px] uppercase tracking-widest">
				<p>Â© 2026 Nick Sammons Realty. All Rights Reserved.</p>
				<p class="mt-4 md:mt-0 text-stone-700">Design by Sam</p>
			</div>
		</footer>
	</body>
</html>

<style is:global>
	:root {
		--font-serif: 'Cormorant Garamond', serif;
		--font-sans: 'Montserrat', sans-serif;
	}
	body {
		font-family: var(--font-sans);
        -webkit-text-size-adjust: 100%;
        text-rendering: optimizeLegibility;
        -webkit-font-smoothing: antialiased;
        transform: translateZ(0);
	}
	h1, h2, h3, .font-serif {
		font-family: var(--font-serif);
	}

	@keyframes teardrop {
		0% {
			transform: scale(1);
			opacity: 1;
			border-radius: 50%;
		}
		100% {
			transform: scale(1.8);
			opacity: 0;
			border-radius: 50% 50% 50% 0%;
		}
	}
	.group:hover .group-hover\:animate-teardrop {
		animation: teardrop 0.8s cubic-bezier(0.4, 0, 0.2, 1) infinite;
	}
</style>
