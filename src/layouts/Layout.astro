---
interface Props {
	title: string;
}

const { title } = Astro.props;
import '../styles/global.css';
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Nick Sammons Realty - Professional Real Estate Services" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/NickSammonsReality/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;600&family=Montserrat:wght@300;400;500;700&display=swap" rel="stylesheet">
	</head>
		<!-- Main Header -->
		<header id="site-header" class="w-full bg-white relative z-[60] transition-all duration-75 overflow-hidden">
			<div class="max-w-7xl mx-auto px-6 lg:px-12 py-8 flex justify-between items-center relative">
				<a href="/NickSammonsReality/" class="flex items-center gap-4 group">
					<img src="/NickSammonsReality/assets/agency-logo.png" alt="Agency Logo" class="h-10 w-auto" />
					<div class="h-8 w-px bg-stone-200"></div>
					<span class="text-xl font-serif font-semibold tracking-tight text-stone-900">
						NICK SAMMONS <span class="font-light text-stone-500 text-sm uppercase tracking-widest ml-1">Realty</span>
					</span>
				</a>
				<div class="flex items-center gap-10">
					<div class="hidden md:flex space-x-10 text-xs font-medium uppercase tracking-[0.2em] text-stone-600">
						<a href="#listings" class="hover:text-stone-900 transition-colors">Listings</a>
						<a href="#about" class="hover:text-stone-900 transition-colors">About</a>
						<a href="#contact" class="hover:text-stone-900 transition-colors">Contact</a>
					</div>
					
					<!-- Mitosis Trigger Container -->
					<div id="nav-trigger-container" class="relative w-14 h-14">
						<button id="nav-mother" class="relative z-10 flex items-center justify-center w-full h-full bg-white text-stone-900 rounded-full border border-stone-200 transition-all duration-300 shadow-sm">
							<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
								<path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
							</svg>
						</button>
					</div>
				</div>
			</div>
			<!-- The Membrane / Cell Wall Border -->
			<div id="header-border" class="absolute bottom-0 left-0 w-full h-px bg-stone-200 overflow-visible">
				<svg id="mitosis-membrane" class="absolute right-6 lg:right-12 bottom-0 w-[200px] h-[300px] pointer-events-none overflow-visible translate-x-[28px]" viewBox="0 0 100 100">
					<path id="membrane-path" d="" fill="white" stroke="#e7e5e4" stroke-width="0.5" class="transition-all duration-75"></path>
				</svg>
			</div>
		</header>

		<!-- Floating Navigation Pill -->
		<nav id="floating-nav" class="fixed top-8 right-6 lg:right-12 z-50 pointer-events-none opacity-0 transition-all duration-75">
			<button class="pointer-events-auto group relative flex items-center justify-center w-14 h-14 bg-white text-stone-900 rounded-full border border-stone-100 shadow-xl transition-all">
				<div class="absolute inset-0 bg-stone-900/5 rounded-full group-hover:animate-teardrop -z-10"></div>
				<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
					<path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
				</svg>
			</button>
		</nav>

		<slot />

		<script>
			const floatingNav = document.getElementById('floating-nav');
			const mother = document.getElementById('nav-mother');
			const membranePath = document.getElementById('membrane-path');
			const membraneSvg = document.getElementById('mitosis-membrane');

			function updateMitosis() {
				const scrollY = window.scrollY;
				const breakDistance = 160;   

				if (scrollY > 0 && scrollY < breakDistance) {
					const stretch = scrollY / breakDistance;
					
					// 1. Mother button stays perfectly locked to the screen
					if (mother) {
						mother.style.opacity = '1';
						mother.style.transform = `translateY(${scrollY}px)`;
					}

					// 2. Membrane stretches from 0 (header border) to scrollY (button)
					const startX = 50;
					const endY = scrollY; 
					const width = 14; 
					
					const path = `M ${startX - 40},0 
								  L ${startX - width},0
								  Q ${startX - width},${endY/2} ${startX},${endY}
								  Q ${startX + width},${endY/2} ${startX + width},0
								  L ${startX + 40},0
								  Z`;
					
					membranePath?.setAttribute('d', path);
					membranePath?.setAttribute('fill-opacity', '1');
					
					// Hide daughter during stretch to prevent ghosting
					floatingNav?.classList.add('opacity-0', 'pointer-events-none');
					floatingNav?.classList.remove('opacity-100');
				} else if (scrollY >= breakDistance) {
					// Snap!
					membranePath?.setAttribute('d', '');
					if (mother) {
						mother.style.opacity = '0';
						mother.style.pointerEvents = 'none';
					}
					
					// Show daughter exactly at the break point
					floatingNav?.classList.remove('opacity-0', 'pointer-events-none');
					floatingNav?.classList.add('opacity-100');
				} else {
					// Reset
					membranePath?.setAttribute('d', '');
					if (mother) {
						mother.style.opacity = '1';
						mother.style.pointerEvents = 'auto';
						mother.style.transform = 'translateY(0)';
					}
					floatingNav?.classList.add('opacity-0', 'pointer-events-none');
				}
			}

			// Use requestAnimationFrame for buttery smooth 60fps tracking
			let ticking = false;
			window.addEventListener('scroll', () => {
				if (!ticking) {
					window.requestAnimationFrame(() => {
						updateMitosis();
						ticking = false;
					});
					ticking = true;
				}
			}, { passive: true });
		</script>
		
		<footer class="bg-stone-900 text-stone-400 py-20 px-6 lg:px-12">
			<div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-12 border-b border-stone-800 pb-20">
				<div class="space-y-6">
					<h3 class="text-xl font-serif text-white tracking-tight">NICK SAMMONS REALTY</h3>
					<p class="text-sm leading-relaxed max-w-xs">Redefining luxury real estate through simple, modern, and professional service across the region.</p>
				</div>
				<div class="space-y-6">
					<h4 class="text-xs font-bold text-white uppercase tracking-widest">Contact</h4>
					<p class="text-sm">Commerce, Georgia<br/>nick@sammonsrealty.com<br/>(555) 123-4567</p>
				</div>
				<div class="space-y-6">
					<h4 class="text-xs font-bold text-white uppercase tracking-widest">Follow</h4>
					<div class="flex space-x-4">
						<a href="#" class="hover:text-white transition-colors">Instagram</a>
						<a href="#" class="hover:text-white transition-colors">Facebook</a>
						<a href="#" class="hover:text-white transition-colors">LinkedIn</a>
					</div>
				</div>
			</div>
			<div class="max-w-7xl mx-auto pt-10 flex flex-col md:flex-row justify-between items-center text-[10px] uppercase tracking-widest">
				<p>Â© 2026 Nick Sammons Realty. All Rights Reserved.</p>
				<p class="mt-4 md:mt-0">Design by Sam</p>
			</div>
		</footer>
	</body>
</html>

<style is:global>
	:root {
		--font-serif: 'Cormorant Garamond', serif;
		--font-sans: 'Montserrat', sans-serif;
	}
	body {
		font-family: var(--font-sans);
	}
	h1, h2, h3, .font-serif {
		font-family: var(--font-serif);
	}

	@keyframes teardrop {
		0% {
			transform: scale(1);
			opacity: 1;
			border-radius: 50%;
		}
		100% {
			transform: scale(1.8);
			opacity: 0;
			border-radius: 50% 50% 50% 0%;
		}
	}
	.group:hover .group-hover\:animate-teardrop {
		animation: teardrop 0.8s cubic-bezier(0.4, 0, 0.2, 1) infinite;
	}
</style>
