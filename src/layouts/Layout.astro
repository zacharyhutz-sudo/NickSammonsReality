---
interface Props {
	title: string;
}

const { title } = Astro.props;
import '../styles/global.css';
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Nick Sammons Realty - Professional Real Estate Services" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/NickSammonsReality/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,600;1,400;1,600&family=Montserrat:wght@300;400;500;700&display=swap" rel="stylesheet">
	</head>
	<body class="bg-[#faf9f6] text-[#1a1a1a] font-sans overflow-x-hidden">
		<!-- Main Header -->
		<header id="site-header" class="w-full bg-white relative z-[60] transition-all duration-75 overflow-hidden">
			<div class="w-full px-6 lg:px-12 py-8 flex justify-between items-center relative">
				<a href="/NickSammonsReality/" class="flex items-center gap-4 group">
					<img src="/NickSammonsReality/assets/agency-logo.png" alt="Agency Logo" class="h-10 w-auto" />
					<div class="h-8 w-px bg-stone-200"></div>
					<span class="text-xl font-serif font-semibold tracking-tight text-stone-900">
						NICK SAMMONS <span class="font-light text-stone-500 text-sm uppercase tracking-widest ml-1">Realty</span>
					</span>
				</a>
				<div class="flex items-center gap-10">
					<div class="hidden md:flex space-x-10 text-xs font-medium uppercase tracking-[0.2em] text-stone-600">
						<a href="/NickSammonsReality/listings" class="hover:text-stone-900 transition-colors">Listings</a>
						<a href="/NickSammonsReality/about" class="hover:text-stone-900 transition-colors">About</a>
						<a href="/NickSammonsReality/contact" class="hover:text-stone-900 transition-colors">Contact</a>
					</div>
					
					<div id="nav-trigger-container" class="relative w-14 h-14">
						<button id="nav-mother" class="nav-toggle relative z-10 flex items-center justify-center w-full h-full bg-white text-stone-900 rounded-full border border-stone-200 transition-all duration-300 shadow-sm">
							<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
								<path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
							</svg>
						</button>
					</div>
				</div>
			</div>
			<div id="header-border" class="absolute bottom-0 left-0 w-full h-px bg-stone-200 overflow-visible">
				<svg id="mitosis-membrane" class="absolute bottom-0 w-[200px] h-[300px] pointer-events-none overflow-visible translate-x-[28px]" viewBox="0 0 100 100" style="right: var(--nav-right-offset, 24px);">
					<path id="membrane-path" d="" fill="white" stroke="#e7e5e4" stroke-width="0.5" class="transition-all duration-75"></path>
				</svg>
			</div>
		</header>

		<nav id="floating-nav" class="fixed top-8 z-50 pointer-events-none opacity-0 transition-all duration-75" style="right: var(--nav-right-offset, 24px);">
			<button class="nav-toggle pointer-events-auto group relative flex items-center justify-center w-14 h-14 bg-white text-stone-900 rounded-full border border-stone-100 shadow-xl transition-all">
				<div class="absolute inset-0 bg-stone-900/5 rounded-full group-hover:animate-teardrop -z-10"></div>
				<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
					<path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
				</svg>
			</button>
		</nav>

		<!-- Fullscreen Navigation Sidebar -->
		<div id="nav-sidebar" class="fixed inset-0 z-[100] pointer-events-none opacity-0 transition-all duration-500">
			<div id="nav-overlay" class="absolute inset-0 bg-stone-950/40 backdrop-blur-sm"></div>
			<div id="nav-panel" class="absolute top-0 right-0 w-full max-w-md h-full bg-white shadow-2xl translate-x-full transition-transform duration-500 flex flex-col p-12 lg:p-20">
				<div class="flex justify-end mb-12 lg:mb-20">
					<button id="nav-close" class="text-stone-400 hover:text-stone-900 transition-colors p-2">
						<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10">
							<path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
						</svg>
					</button>
				</div>
				
				<div class="flex-1 flex flex-col justify-center space-y-8 lg:space-y-12">
					<a href="/NickSammonsReality/" class="text-4xl lg:text-6xl font-serif hover:italic transition-all">Home</a>
					<a href="/NickSammonsReality/about" class="text-4xl lg:text-6xl font-serif hover:italic transition-all">About Nick</a>
					<a href="/NickSammonsReality/listings" class="text-4xl lg:text-6xl font-serif hover:italic transition-all">Listings</a>
					<a href="/NickSammonsReality/contact" class="text-4xl lg:text-6xl font-serif hover:italic transition-all">Contact Us</a>
				</div>

				<div class="pt-12 border-t border-stone-100 mt-auto">
					<p class="text-[10px] font-bold uppercase tracking-widest text-stone-400 mb-4">Get In Touch</p>
					<a href="mailto:nick@sammonsrealty.com" class="text-sm font-medium hover:text-stone-500">nick@sammonsrealty.com</a>
					<div class="flex gap-6 mt-8">
						<a href="#" class="text-xs uppercase tracking-widest hover:text-stone-500">Instagram</a>
						<a href="#" class="text-xs uppercase tracking-widest hover:text-stone-500">LinkedIn</a>
					</div>
				</div>
			</div>
		</div>

		<slot />

		<script>
			const floatingNav = document.getElementById('floating-nav');
			const mother = document.getElementById('nav-mother');
			const membranePath = document.getElementById('membrane-path');
			const membraneSvg = document.getElementById('mitosis-membrane');

			function syncResponsivePadding() {
				if (mother && membraneSvg && floatingNav) {
					// 1. Get exact pixels from the right edge of the screen to the Mother
					const rect = mother.getBoundingClientRect();
					const offsetRight = window.innerWidth - rect.right;
					
					// 2. Clear out any previous styles that might conflict
					floatingNav.style.right = 'auto';
					membraneSvg.style.right = 'auto';
					
					// 3. Set pixel-perfect alignment based on Mother's live position
					// We use left + width calculation to ensure it's exact regardless of 'right' properties
					const exactRightPx = window.innerWidth - (rect.left + rect.width);
					
					document.documentElement.style.setProperty('--nav-right-offset', `${exactRightPx}px`);
					
					// Manually set these to bypass any CSS transition/interference during resize
					floatingNav.style.right = `${exactRightPx}px`;
					membraneSvg.style.right = `${exactRightPx}px`;
				}
			}

			// Ensure sync happens after all images and layouts are finalized
			window.addEventListener('load', syncResponsivePadding);
			window.addEventListener('resize', syncResponsivePadding);
			setTimeout(syncResponsivePadding, 100);
			setTimeout(syncResponsivePadding, 1000); // Fail-safe for late layout shifts

			function updateMitosis() {
				const scrollY = window.scrollY;
				const breakDistance = 160;   

				if (scrollY > 0 && scrollY < breakDistance) {
					// 1. Organic Elastic Lag
					// Mother button lags slightly behind scroll for "tension"
					const lagFactor = 0.85; 
					const visualY = scrollY * lagFactor;
					
					if (mother) {
						mother.style.opacity = '1';
						mother.style.transform = `translateY(${visualY}px)`;
					}

					// 2. Sync Floating Daughter to the SAME lag
					if (floatingNav) {
						// Match the mother's visual position exactly
						floatingNav.style.transform = `translateY(${visualY - scrollY}px)`;
						floatingNav.style.opacity = '1';
						floatingNav.style.pointerEvents = 'none';
					}

					// 3. Draw Membrane to the lagged button position
					const startX = 50;
					const endY = visualY; 
					const width = 14; 
					const path = `M ${startX - 40},0 L ${startX - width},0 Q ${startX - width},${endY/2} ${startX},${endY} Q ${startX + width},${endY/2} ${startX + width},0 L ${startX + 40},0 Z`;
					
					membranePath?.setAttribute('d', path);
					membranePath?.setAttribute('fill-opacity', '1');
				} else if (scrollY >= breakDistance) {
					membranePath?.setAttribute('d', '');
					if (mother) {
						mother.style.opacity = '0';
						mother.style.pointerEvents = 'none';
					}
					if (floatingNav) {
						floatingNav.style.transform = 'translateY(0)';
						floatingNav.style.opacity = '1';
						floatingNav.style.pointerEvents = 'auto';
					}
				} else {
					membranePath?.setAttribute('d', '');
					if (mother) {
						mother.style.opacity = '1';
						mother.style.transform = 'translateY(0)';
						mother.style.pointerEvents = 'auto';
					}
					if (floatingNav) {
						floatingNav.style.transform = 'translateY(0)';
						floatingNav.style.opacity = '0';
						floatingNav.style.pointerEvents = 'none';
					}
				}
			}

			let ticking = false;
			window.addEventListener('scroll', () => {
				if (!ticking) {
					window.requestAnimationFrame(() => {
						updateMitosis();
						ticking = false;
					});
					ticking = true;
				}
			}, { passive: true });

			// Sidebar Logic
			const openNav = () => {
				navSidebar?.classList.remove('pointer-events-none', 'opacity-0');
				navSidebar?.classList.add('opacity-100');
				navPanel?.classList.remove('translate-x-full');
			};

			const closeNav = () => {
				navPanel?.classList.add('translate-x-full');
				navSidebar?.classList.remove('opacity-100');
				navSidebar?.classList.add('opacity-0');
				
				// Wait for slide animation to finish before removing pointer events
				setTimeout(() => {
					navSidebar?.classList.add('pointer-events-none');
				}, 500);
			};

			toggles.forEach(btn => btn.addEventListener('click', openNav));
			navClose?.addEventListener('click', closeNav);
			navOverlay?.addEventListener('click', closeNav);
		</script>
		
		<footer class="bg-stone-900 text-stone-400 py-20 px-6 lg:px-12">
			<div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-12 border-b border-stone-800 pb-20">
				<div class="space-y-6">
					<h3 class="text-xl font-serif text-white tracking-tight">NICK SAMMONS REALTY</h3>
					<p class="text-sm leading-relaxed max-w-xs text-stone-500">Professional modern real estate solutions across North Georgia. Built on transparency, discipline, and customer service.</p>
				</div>
				<div class="space-y-6">
					<h4 class="text-xs font-bold text-white uppercase tracking-widest">Connect</h4>
					<p class="text-sm">Commerce, Georgia<br/>nick@sammonsrealty.com<br/>North Georgia REALTOR®</p>
				</div>
				<div class="space-y-6">
					<h4 class="text-xs font-bold text-white uppercase tracking-widest">Follow</h4>
					<div class="flex space-x-4">
						<a href="#" class="hover:text-white transition-colors">Instagram</a>
						<a href="#" class="hover:text-white transition-colors">LinkedIn</a>
					</div>
				</div>
			</div>
			<div class="max-w-7xl mx-auto pt-10 flex flex-col md:flex-row justify-between items-center text-[10px] uppercase tracking-widest">
				<p>© 2026 Nick Sammons Realty. All Rights Reserved.</p>
				<p class="mt-4 md:mt-0 text-stone-600">Design by Sam</p>
			</div>
		</footer>
	</body>
</html>

<style is:global>
	:root {
		--font-serif: 'Cormorant Garamond', serif;
		--font-sans: 'Montserrat', sans-serif;
	}
	body {
		font-family: var(--font-sans);
	}
	h1, h2, h3, .font-serif {
		font-family: var(--font-serif);
	}

	@keyframes teardrop {
		0% {
			transform: scale(1);
			opacity: 1;
			border-radius: 50%;
		}
		100% {
			transform: scale(1.8);
			opacity: 0;
			border-radius: 50% 50% 50% 0%;
		}
	}
	.group:hover .group-hover\:animate-teardrop {
		animation: teardrop 0.8s cubic-bezier(0.4, 0, 0.2, 1) infinite;
	}
</style>
